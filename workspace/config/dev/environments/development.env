# SynergyMesh 開發環境配置
# Environment: Development

# 基本設定
NODE_ENV=development
LOG_LEVEL=debug

# 端口範圍
PORT_RANGE_START=8000
PORT_RANGE_END=8999

# 開發模式設定
AUTO_RELOAD=true
DEBUG_MODE=true
HOT_RELOAD=true

# 服務端口
BRAIN_PORT=3015
HEART_PORT=3018
HEARTBEAT_PORT=3020
FIXOPS_SLAGEIST_PORT=3010

# 資料庫設定
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=synergymesh_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password

# Redis 設定
REDIS_HOST=localhost
REDIS_PORT=6379

# 監控設定
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# 安全設定
CORS_ENABLED=true
CORS_ORIGIN=*
