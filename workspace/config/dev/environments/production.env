# SynergyMesh 生產環境配置
# Environment: Production
# 警告: 請勿在此檔案中存放實際的生產密碼

# 基本設定
NODE_ENV=production
LOG_LEVEL=warn

# 端口範圍
PORT_RANGE_START=3000
PORT_RANGE_END=3999

# 生產模式設定
AUTO_RELOAD=false
DEBUG_MODE=false
HOT_RELOAD=false

# 服務端口
BRAIN_PORT=3015
HEART_PORT=3018
HEARTBEAT_PORT=3020
FIXOPS_SLAGEIST_PORT=3010

# 資料庫設定 (使用環境變數或密鑰管理服務)
POSTGRES_HOST=prod-db
POSTGRES_PORT=5432
POSTGRES_DB=synergymesh_prod
# POSTGRES_USER 和 POSTGRES_PASSWORD 應從密鑰管理服務獲取

# Redis 設定
REDIS_HOST=prod-redis
REDIS_PORT=6379

# 監控設定
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# 安全設定
CORS_ENABLED=true
CORS_ORIGIN=https://synergymesh.io
SSL_ENABLED=true

# 效能設定
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
