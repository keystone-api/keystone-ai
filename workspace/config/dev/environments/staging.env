# SynergyMesh 測試環境配置
# Environment: Staging

# 基本設定
NODE_ENV=staging
LOG_LEVEL=info

# 端口範圍
PORT_RANGE_START=9000
PORT_RANGE_END=9999

# 測試模式設定
AUTO_RELOAD=false
DEBUG_MODE=false
HOT_RELOAD=false

# 服務端口
BRAIN_PORT=9015
HEART_PORT=9018
HEARTBEAT_PORT=9020
FIXOPS_SLAGEIST_PORT=9010

# 資料庫設定
POSTGRES_HOST=staging-db
POSTGRES_PORT=5432
POSTGRES_DB=synergymesh_staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_secure_password

# Redis 設定
REDIS_HOST=staging-redis
REDIS_PORT=6379

# 監控設定
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# 安全設定
CORS_ENABLED=true
CORS_ORIGIN=https://staging.synergymesh.io
