{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grail/core": ["./core/index.ts"],
      "@grail/quantum": ["./quantum/index.ts"],
      "@grail/nexus": ["./nexus/index.ts"],
      "@grail/market": ["./market/index.ts"],
      "@grail/converters": ["./converters/index.ts"],
      "@grail/protocols": ["./protocols/index.ts"],
      "@grail/types": ["./types/index.ts"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
