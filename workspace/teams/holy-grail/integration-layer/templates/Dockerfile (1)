# ==============================================================================
# INTELLIGENT BEHAVIOR CONTRACT SYSTEM - MULTI-STAGE DOCKERFILE
# ==============================================================================
# Version: 2.0.0
# Base Images: Python 3.11 (slim), distroless for production
# Security: Multi-stage build, minimal attack surface, non-root user
# ==============================================================================

# ------------------------------------------------------------------------------
# STAGE 1: Build Stage
# ------------------------------------------------------------------------------
FROM python:3.11-slim AS builder

# Set build arguments
ARG BUILD_DATE
ARG VERSION=2.0.0
ARG VCS_REF

# Labels for metadata
LABEL org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.title="IBCS Core Engine" \
      org.opencontainers.image.description="Intelligent Behavior Contract System" \
      org.opencontainers.image.vendor="IBCS Project" \
      org.opencontainers.image.licenses="Proprietary"

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /build

# Copy dependency files
COPY requirements.txt requirements-dev.txt ./

# Create virtual environment
RUN python -m venv /opt/venv

# Activate virtual environment
ENV PATH="/opt/venv/bin:$PATH"

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# Copy application source
COPY core/ ./core/
COPY config/ ./config/
COPY validators/ ./validators/
COPY auxiliary/ ./auxiliary/
COPY plugins/ ./plugins/

# Compile Python files for faster startup
RUN python -m compileall -b core/ validators/ auxiliary/ && \
    find . -type f -name "*.py" -delete && \
    find . -type f -name "*.pyc" -exec rename 's/\.pyc$/\.py/' {} \;

# ------------------------------------------------------------------------------
# STAGE 2: Runtime Stage
# ------------------------------------------------------------------------------
FROM python:3.11-slim

# Set runtime arguments
ARG VERSION=2.0.0

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r ibcs --gid=1000 && \
    useradd -r -g ibcs --uid=1000 --create-home --shell /bin/bash ibcs

# Set working directory
WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder --chown=ibcs:ibcs /opt/venv /opt/venv

# Copy application files
COPY --from=builder --chown=ibcs:ibcs /build/core ./core
COPY --from=builder --chown=ibcs:ibcs /build/validators ./validators
COPY --from=builder --chown=ibcs:ibcs /build/auxiliary ./auxiliary
COPY --from=builder --chown=ibcs:ibcs /build/plugins ./plugins

# Copy configuration (will be overridden by ConfigMap in K8s)
COPY --chown=ibcs:ibcs config/ ./config/

# Create necessary directories
RUN mkdir -p /var/log/ibcs /tmp/ibcs /app/data && \
    chown -R ibcs:ibcs /var/log/ibcs /tmp/ibcs /app/data

# Set environment variables
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONPATH="/app:$PYTHONPATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    VERSION=${VERSION}

# Expose ports
EXPOSE 8080 9090 8081

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8081/health/live || exit 1

# Switch to non-root user
USER ibcs

# Set security options
# - Read-only root filesystem (requires /tmp mount)
# - Drop all capabilities
# - No new privileges
ENV DOCKER_CONTENT_TRUST=1

# Default command
CMD ["python", "-m", "core.contract-engine"]

# ------------------------------------------------------------------------------
# STAGE 3: Development Stage (Optional)
# ------------------------------------------------------------------------------
FROM builder AS development

# Install development dependencies
RUN pip install --no-cache-dir -r requirements-dev.txt

# Install debugging tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    vim \
    less \
    iputils-ping \
    net-tools \
    && rm -rf /var/lib/apt/lists/*

# Copy test files
COPY tests/ ./tests/

# Set development environment
ENV ENVIRONMENT=development \
    DEBUG=true

# Default command for development
CMD ["python", "-m", "pytest", "-v"]

# ==============================================================================
# BUILD INSTRUCTIONS
# ==============================================================================
# 
# Build production image:
#   docker build --target builder -t ibcs-core:2.0.0 .
#   docker build -t ibcs-core:2.0.0 .
# 
# Build with build args:
#   docker build \
#     --build-arg BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ') \
#     --build-arg VCS_REF=$(git rev-parse --short HEAD) \
#     --build-arg VERSION=2.0.0 \
#     -t ibcs-core:2.0.0 .
# 
# Build development image:
#   docker build --target development -t ibcs-core:dev .
# 
# Run container:
#   docker run -d \
#     --name ibcs-core \
#     -p 8080:8080 \
#     -p 9090:9090 \
#     -e ANTHROPIC_API_KEY=your-key \
#     -v $(pwd)/config:/app/config:ro \
#     ibcs-core:2.0.0
# 
# Security scan:
#   docker scan ibcs-core:2.0.0
#   trivy image ibcs-core:2.0.0
# 
# Generate SBOM:
#   syft ibcs-core:2.0.0 -o spdx-json > ibcs-sbom.json
# 
# Sign image:
#   cosign sign --key cosign.key ibcs-core:2.0.0
# 
# ==============================================================================
